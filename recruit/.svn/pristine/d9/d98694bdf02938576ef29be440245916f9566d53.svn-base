body{height:100%;background-color: #fbfbfb;}
.head{height:70px;padding:0 6%;border-bottom:1px solid #aaa;background-color:#fff;position:absolute;top:0;width:100%;box-sizing:border-box;z-index:100;}
.head > div{display:inline-block;}
.head .logo{height:100%;}
.head .logo .logo_img{padding:11px 0;} 
.head .logo .logo-dec{color:#555;font-size:1.5em;font-weight:bold;line-height:70px;vertical-align:top;}
.head .nav{vertical-align:top;position:absolute;padding:0 20%;left:0;box-sizing:border-box;width:100%;}
.head .nav .models{}
.head .nav .models .models-item{display:inline-block;line-height:70px;font-size:14px;padding:0 12px;color:#666;cursor:pointer;}
.head .nav .models .models-item a{color:#666;} 
.head .nav .models .models-item .models-item-sub{position:absolute;top:0;left:0;display:none;line-height:40px;background-color:#fff;width:100%;left:0;padding:10px 20%;box-sizing:border-box;border-bottom:1px solid #aaa;transition:all 3s cubic-bezier(.4,0,.2,1);}
.head .nav .models .models-item .models-item-sub a{color:#888;}
.head .nav .models .models-item:hover .models-item-sub{display:block;top:100%;}
.head .nav .models .models-item .models-item-sub > * {display:inline-block;padding:0 12px;vertical-align:top;}
.head .nav .models .models-item .models-item-sub .models-item-sub-item:hover a{color:#00c1de;}
.head .nav .models .models-item .models-item-sub .models-item-sub-item.active a{color:#00c1de;}
.head .nav .models .models-item .models-item-sub .models-item-sub-menu{}
.head .nav .models .models-item .models-item-sub .models-item-sub-menu-text{color:#bbb;position:relative;display:inline-block;}
.head .nav .models .models-item .models-item-sub .models-item-sub-menu-text:before{position:absolute;right:100%;top:0;margin-right:4px;content:"--";}
.head .nav .models .models-item .models-item-sub .models-item-sub-menu-text:after{position:absolute;left:100%;top:0;margin-left:4px;content:"--";}
.head .nav .models .models-item .models-item-sub .models-item-sub-menu .models-item-sub-menu-sub{line-height:30px;margin-top:-5px;}
.head .nav .models .models-item .models-item-sub .models-item-sub-menu .models-item-sub-menu-sub .models-item-sub-menu-sub-item:hover{color:#00c1de;}
.head .nav .models .line{margin-left:20%;position:absolute;left:0px;height:3px;width:0;padding:0;background-color:#00c1de;bottom:0;-webkit-transition:all .3s cubic-bezier(.4,0,.2,1);transition:all .3s cubic-bezier(.4,0,.2,1);}
.head .nav .models .models-item.active:after{content:"";width:100%;height:3px;background-color:#00c1de;}
.head .user{position:absolute;right:6%;line-height:70px;color:#666;}
.head .user a{color:#666;} 
.head .user a:hover{color:#00c1de;}
.head .user .cur_user{padding-right:20px;}
.co{min-height:100%;margin:-41px 6% 0;box-sizing:border-box;padding-top:112px;}
.co-left{display:none;}
.position-path{display:none;}
.clear{clear:both;}
.footer{height:40px;line-height:40px;text-align:center;color:#444;border-top:1px solid #aaa;background-color:#fff;}
