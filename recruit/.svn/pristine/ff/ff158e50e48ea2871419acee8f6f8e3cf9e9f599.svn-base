<!DOCTYPE>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<% 
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path;
%>
<c:set var="webRoot" value="<%=basePath%>" />
<html>
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=Edge"/>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
		<link rel="Shortcut Icon" href="${webRoot}/resources/images/logo.ico"/> 
		<link type="text/css" rel="stylesheet" href="${webRoot}/resources/css/public/reset.css"/>
		<link type="text/css" rel="stylesheet" href="${webRoot}/resources/css/public/common.css"/>
		<link type="text/css" rel="stylesheet" href="${webRoot}/resources/css/public/animation.css"/>
		<link type="text/css" rel="stylesheet" href="${webRoot}/resources/css/public/main.css"/>
		<link type="text/css" rel="stylesheet" href="${webRoot}/resources/plugins/miniui/miniui/themes/default/miniui.css"/>
    <link type="text/css" rel="stylesheet" href="${webRoot}/resources/plugins/miniui/miniui/themes/icons.css"/>
		<script type="text/javascript" src="${webRoot}/resources/js/public/jquery-1.8.3.min.js"></script>
		<script type="text/javascript" src="${webRoot}/resources/plugins/miniui/miniui/miniui.js"></script>
		<script type="text/javascript" src="${webRoot}/resources/js/public/common.js"></script>
		<script type="text/javascript" src="${webRoot}/resources/js/public/main.js"></script>
		<script type="text/javascript">var basePath = "${webRoot}";</script>
	</head>
</html>