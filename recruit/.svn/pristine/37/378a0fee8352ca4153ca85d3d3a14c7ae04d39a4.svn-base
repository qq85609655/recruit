var editor;
KindEditor.ready(function(K) {
  editor = K.create('textarea[name="content"]', {
    allowFileManager : false
  });
  editor.sync();
});

$(function(){
  $("input[name='interview_type']").change(function(){
    $("#waitAddress").val('');
    $("#interviewAddress").val('');
    $("input[name='interview_type']").each(function(){
      if($(this).attr('checked')=='checked' && $(this).val()=='1'){
        $("#waitAddressTr").show();
        $("#interviewAddressTr").show();
        
        
      }
      if($(this).attr('checked')=='checked' && $(this).val()=='2'){
        $("#waitAddressTr").hide();
        $("#interviewAddressTr").hide();
      }
      
    });
    
  });
  

});

