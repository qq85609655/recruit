var time;
$("#messageTitle").mouseover(function(){
	$("#messageFeedbackBox").show();
}).mouseout(function(){
    time = setTimeout("$('#messageFeedbackBox').hide()",300);
})
$("#messageFeedbackBox").mouseenter(function(){
	clearTimeout(time);
}).mouseleave(function(){
	$('#messageFeedbackBox').hide();
})

$(".user-name").mouseover(function(){
	$("#PersonSettings").show();
}).mouseout(function(){
	time = setTimeout("$('#PersonSettings').hide()",300);
})
$("#PersonSettings").mouseenter(function(){
	clearTimeout(time);
}).mouseleave(function(){
	$('#PersonSettings').hide()
})
