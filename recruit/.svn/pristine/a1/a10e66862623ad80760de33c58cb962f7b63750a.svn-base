package org.amberframework.web.miniui.pojo;

import java.io.Serializable;

/***
 * 分页工具类
 *
 */
public class MiniGridPageSort implements Serializable {

	private static final long serialVersionUID = -5523914647497018826L;
	// 分页参数(页数)
	private int pageIndex = 0;
	// 分页参数(每页条数)
	private int pageSize = 10;
	// 排序字段
	private String sortField;
	// 排序顺序(降序或者升序)
	private String sortOrder;
	// 是否显示分页
	private boolean showPager;

	public int getPageIndex() {
		return pageIndex;
	}

	public void setPageIndex(int pageIndex) {
		this.pageIndex = pageIndex;
	}

	public int getPageSize() {
		return pageSize;
	}

	public void setPageSize(int pageSize) {
		this.pageSize = pageSize;
	}

	public String getSortField() {
		return sortField;
	}

	public void setSortField(String sortField) {
		this.sortField = sortField;
	}

	public String getSortOrder() {
		return sortOrder;
	}

	public void setSortOrder(String sortOrder) {
		this.sortOrder = sortOrder;
	}

	public boolean isShowPager() {
		return showPager;
	}

	public void setShowPager(boolean showPager) {
		this.showPager = showPager;
	}

}
