html,body
{
	width:100%;
    height:100%;
    margin:0;
    padding:0;
    border:0;
	font-family: "Microsoft YaHei" !important;
}
hr 
{
	filter:alpha(opacity=100,finishopacity=0,style=3);
	width:97%;
	color:#d2d2d2;
	size:1;
}

/*-------无图片实现圆角框 ----------*/
.b1,.b2,.b3,.b4,.b1b,.b2b,.b3b,.b4b,.b{display:block;overflow:hidden;}
.b1,.b2,.b3,.b1b,.b2b,.b3b{height:1px;}
.b2,.b3,.b4,.b2b,.b3b,.b4b,.b{border-left:1px solid #d2d2d2;border-right:1px solid #d2d2d2;}
.b1,.b1b{margin:0 5px;background:#d2d2d2;}
.b2,.b2b{margin:0 3px;border-width:2px;}
.b3,.b3b{margin:0 2px;}
.b4,.b4b{height:2px;margin:0 1px;}
.d1{background:#FFFFFF;}
.k {height:100%;}

.rounded 
{
  	width: 47%;
  	/*height:90%;*/
  	padding: 0 2%;
  	position:absolute;
}

.center-part
{
	padding-bottom:25px;
}
.center-align
{
	padding-left:4%;
}

.table-header 
{
  	font-size:18px;
  	color: #0;
  	padding-top: 20px;
  	padding-left: 20px;
}

.table1 
{
  	width: 90%;
  	height:auto;
  	font-size:14px;
  	color: #6f7072;
  	padding-top: 5px;
 	padding-bottom: 5px;
  	padding-left: 5px;
  	padding-right: 5px;
  	
  	margin-left: 5%;
  	
  	bolder-color: #d2d2d2;
}

.table1 th
{
	text-align:right;
	font-weight:300;
}
.table1 td
{
	text-align:left;
	padding:8px;
}

.mini-table
{
	color: #333333;
	text-align: center;
	border-style: solid;
  	border-color: #6186bd;
  	border-width: 1px;
  	border-spacing: 0;
  	padding-top: 0;
 	padding-bottom: 0;
  	padding-left: 0;
  	padding-right: 0;
}
.mini-table td {text-align: center;}
.mini-table tr:nth-child(odd){background-color:#f3f6f9;} 
.mini-table tr:nth-child(even){ background-color:#dfe6ee;} 
.mini-table th
{
	background:#6186bd;
    color:White;
   	font-weight:bold;
    text-align: center;
}


a.report-link:link {color: #0000CC}               /* 未被访问的链接 */
a.report-link:visited {color: #0000CC}            /* 已被访问过的链接  */
a.report-link:hover {color: #0055FF}            /* 鼠标悬浮在上的链接 */
a.report-link:active {color: #0000CC} 			/* 鼠标点中激活链接 */
    
